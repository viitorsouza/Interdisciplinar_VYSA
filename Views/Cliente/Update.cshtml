@using VYSA.Models
@model Cliente
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "/Views/Layout.cshtml";
    ViewBag.Title = "Atualiza Cliente";
}

<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Cliente/Index">Cliente</a></li>
        <li class="breadcrumb-item active" aria-current="page">Atualiza Cliente</li>
    </ol>
</div>

<form action="/Cliente/Update/@Model.Id" method="POST">
    
    <div class="row">    
        <div class="col-8">
            <label>Nome</label>
            <input type="text" class="form-control" asp-for="Nome"/>
        </div>

        <div class="col-4">
            <label>Idade</label>
            <input type="number" class="form-control" asp-for="Idade"/>
        </div>
    </div>

     <div>
        <label>Endere√ßo</label>
        <input type="text" class="form-control" asp-for="Endereco"/>
    </div>

    <div class="row">    
        <div class="col-6">
            <label>CPF</label>
                <input type="text" MAXLENGTH=14 onkeypress="$(this).mask('000.000.000-00');"
                    class="form-control" asp-for="CPF" \
			        pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" \
			        title="Digite um CPF no formato: xxx.xxx.xxx-xx">
        </div>

        <div class="col-6">
            <label>Status</label>
            <select asp-for="Status" class="form-control">
                {
                    <option value="1">Ativo</option>
                    <option value="0">Inativo</option>
                }
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label>E-mail</label>
            <input type="email" class="form-control" asp-for="endEmail"/>
        </div>    

        <div class="col-6">
            <label>Telefone</label>
            <input type="text" class="form-control" onkeypress="$(this).mask('(00) 00000-0000')" asp-for="Telefone"/>
        </div>
    </div>    
    
    <button class="btn btn-primary" style="margin-top: 20px">Salvar</button>
</form>